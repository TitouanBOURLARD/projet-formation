{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="showProductIllustration">
        </div>
        <div class="col-md-7 my-auto">
            <h1>{{ product.name }}</h1>
            <p class="product-subtitle">{{ product.subtitle }}</p>
            <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.') }} â‚¬</span>
            <hr />
            <p>{{ product.description }}</p>
            <a href="{{ path('app_add_to_cart', { 'id': product.id }) }}" class="btn btn-primary" id="add-to-cart">Ajoutez au panier</a>
        </div>
    </div>
    <hr>

{% endblock %}
