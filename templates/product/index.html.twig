{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block content %}

    <div class="row">
        <!--<div class="col-md-3">
            <h3>Filtrer</h3>
        </div>-->
        <div class="col-md-9">
            <h3>Nos produits actuellement listés :</h3>

            <div class="row" >
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item text-center" id="ficheProduits">
                        <hr>
                            <a href="{{ path('app_product', { 'slug' : product.slug }) }}">
                                <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid" />
                            </a>
                            <h5>{{ product.name }}</h5>
                            <span class="product-subtitle">
                                {{ product.subtitle }}
                            </span>
                            <span class="product-price">
                                {{ (product.price / 100)|number_format(2, ',', '.') }} €
                            </span>
                            
                        </div>
                        {# {{ dump(product) }} #}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    

{% endblock %}
