{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block content %}
    <a href="{{ path('app_account_add_addresse') }}" class="btn btn-primary float-right">
        Ajouter une adresse
    </a>
    <h1>Mes adresses</h1>

    <div class="row">
        {% for address in app.user.addresses %}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ address.name }}</h5>
                        <p class="card-text">
                            {{ address.address }}<br />
                            {{ address.zipcode }}, {{ address.city }}<br />
                            {{ address.country }}<br /><br />
                            TÃ©lÃ©phone : {{ address.phone }}
                        </p>

                        <a href="{{ path('app_account_update_addresse') }}">Modifier</a> | 
                        <a href="{{ path('app_account_remove_addresse') }}">Supprimer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
