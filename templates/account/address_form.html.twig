{% extends 'base.html.twig' %}

{% block title %}Gérer mes adresses{% endblock %}


{% block content %}
    <a href="{{ path('app_account_addresses') }}" class="btn btn-primary float-right">Annuler</a>
    <h1>Gérer mes adresses</h1>
    
    <hr />

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.name) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(form.firstname) }}</div>
            <div class="col-md-6">{{ form_row(form.lastname) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(form.address) }}</div>
            <div class="col-md-6">{{ form_row(form.zipcode) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(form.city) }}</div>
            <div class="col-md-6">{{ form_row(form.country) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(form.phone) }}</div>
            <div class="col-md-6">{{ form_row(form.company) }}</div>
        </div>
    {{ form_end(form) }}

{% endblock %}
